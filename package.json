{
  "name": "robopeterson-api",
  "version": "1.0.0",
  "description": "API for the RoboPeterson Dialogflow agent.",
  "main": "server.js",
  "scripts": {
    "build": "npm run clean && babel -d ./build ./src -s",
    "start": "npm run build && nodemon ./src/server.js | bunyan",
    "clean": "rm -rf ./build && mkdir build",
    "heroku-postbuild": "npm install && npm run build",
    "preinstall": "node ./gcpSetup.js",
    "test": "mocha | bunyan"
  },
  "author": "Phaedrus Raznikov",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/firestore": "^2.5.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "body-parser": "^1.18.3",
    "bunyan": "^1.8.12",
    "cookie-parser": "^1.4.3",
    "dialogflow": "^0.12.2",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "fs": "0.0.1-security",
    "helmet": "^3.15.1",
    "module-alias": "^2.1.0",
    "nodemon": "^1.18.9",
    "supertest": "^3.4.2",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "chai": "*",
    "mocha": "*"
  },
  "_moduleAliases": {
    "@root": "src",
    "@routes": "src/routes",
    "@controllers": "src/controllers",
    "@test": "test"
  }
}
